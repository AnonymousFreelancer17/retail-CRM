# Run the container with `docker run -p 3000:3000 -t auth-services`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system auth-services && \
          adduser --system -G auth-services auth-services

COPY apps/auth-services/dist auth-services/
RUN chown -R auth-services:auth-services .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix auth-services --omit=dev -f install

CMD [ "node", "auth-services" ]
